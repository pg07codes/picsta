    if(document.URL==="http://localhost:8888/?ein=true"){
        var e=document.URL.split("?")[1].split("=")[1]
    if(e==="true"){
        console.log(e)
        $("#error").append(`<div class="alert alert-danger" style="width:400px; margin:20px auto;" role="alert">
                                    Invalid credentials ! Try again or Register now.
                            </div>`)
